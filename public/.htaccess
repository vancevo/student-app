# File: public/.htaccess
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Điều kiện bỏ qua file/folder
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    
    # 🔑 SỬA LỖI: Thêm RewriteRule chính
    # Chuyển hướng tất cả các yêu cầu còn lại (^) đến index.php
    # [L]: Rule cuối cùng; [QSA]: Giữ lại Query String (nếu có)
    RewriteRule ^ index.php [L,QSA] 
</IfModule>