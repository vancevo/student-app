# File: .htaccess (Trong thư mục AQCoder)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # 1. Chặn truy cập trực tiếp vào logic
    RewriteRule ^app/ - [F]
    RewriteRule ^views/ - [F]

    # 2. Bỏ qua nếu là tệp/thư mục tồn tại
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # 3. Chuyển hướng MỌI YÊU CẦU đến public/index.php
    RewriteRule ^(.*)$ public/index.php [L,QSA]
</IfModule>